<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="@android:color/holo_purple" android:endColor="@android:color/holo_blue_dark" android:angle="180"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/colorAccent" android:endColor="@color/colorPrimary" android:angle="180"/>
            <corners android:radius="20dp"/>
            <stroke android:color="#f54" android:width="3dp"/>
        </shape>
    </item>
</selector>